@model LoginViewModel
@{
	ViewData["Title"] = "Login";
}
<div class="col-md-12">
 <div class="modal-dialog" style="margin-bottom:0">
  <div class="modal-content">
   <div class="panel-heading">
	<h3 class="panel-title">KULLANICI GİRİŞİ</h3>
   </div>
      <div class="panel-body">
          <div asp-validation-summary="All"></div>
          <form role="form" asp-action="Login" method="post">
              <fieldset>
                  <div class="form-group">
                      <input class="form-control" placeholder="Kullanıcı Adı" asp-for="UserName">
                  </div>
                  <div class="form-group">
                      <input class="form-control" placeholder="Parola" asp-for="Password">
                  </div>
                  <button type="submit" class="btn btn-success">Giriş Yap</button>
              </fieldset>
          </form>
      </div>
  </div>
 </div>
</div>